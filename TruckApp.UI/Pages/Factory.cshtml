@page  "{factoryName}"
@model TruckApp.UI.Pages.FactoryModel
@{
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Factory Staff Detail</h2>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Factory Detail</h5>
                </div>
                <div class="ibox-content">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Address</th>
                                <th>City</th>
                                <th>State</th>
                                <th>ZipCode</th>
                                <th>Description</th>
                                <th>Rate</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@Model.Factory.Name</td>
                                <td>@Model.Factory.Email</td>
                                <td>@Model.Factory.Phone1</td>
                                <td>@Model.Factory.Address1</td>
                                <td>@Model.Factory.City</td>
                                <td>@Model.Factory.State</td>
                                <td>@Model.Factory.ZipCode</td>
                                <td>@Model.Factory.Description</td>
                                <td>@Model.Factory.Rate</td>
                                <td>@Model.Factory.Status</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Factory Staff Detail</h5>
                </div>
                <div class="ibox-content">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var s in Model.Factory.FactoryStaff)
                                {
                                    <tr>
                                        <td>
                                            @s.FirstName @s.LastName
                                        </td>
                                        <td>
                                            @s.Email
                                        </td>
                                        <td>
                                            @s.Phone1
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>