@page
@model TruckApp.UI.Pages.Admin.Pages.FactoryStaffModel
@{
}

    <div id="app" class="wrapper wrapper-content animated fadeInRight ecommerce">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox">
                    <div class="ibox-content">
                        <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="15">
                            <thead>
                                <tr>
                                    <th data-toggle="true">Factory Name</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr v-for="factory in factories" >
                                    <td>
                                        {{factory.name}}
                                    </td>
                                    <td class="text-right">
                                        <div class="btn-group">
                                            <button class="btn-white btn btn-xs" @@click="selectFactory(factory)">Select Factory</button>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="ibox" v-if="selectedFactory">
                    <div class="ibox-content">
                        <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="15">
                            <thead>
                            <thead>
                                <tr>
                                    <th data-toggle="true">First Name</th>
                                    <th data-hide="all">Last Name</th>
                                    <th data-hide="phone">Description</th>
                                    <th class="text-right" data-sort-ignore="true">Action</th>

                                </tr>
                            </thead>
                            <tbody>
                                <tr v-for="(factoryStaff, index) in selectedFactory.factoryStaff">
                                    <td>
                                        <div class="form-group row">
                                            <div class="col-sm-10">
                                                <input v-model="factoryStaff.firstName" type="text" class="form-control">
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="form-group row">
                                            <div class="col-sm-10">
                                                <input v-model="factoryStaff.lastName" type="text" class="form-control">
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="form-group row">
                                            <div class="col-sm-10">
                                                <input v-model="factoryStaff.description" type="text" class="form-control">
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-right">
                                        <div class="btn-group">
                                            <button class="btn-white btn btn-xs" @@click="updateFactoryStaff">Update</button>
                                            <button class="btn-white btn btn-xs" @@click="deleteFactoryStaff(factoryStaff.id, index)">Delete</button>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="ibox">
                    <div class="ibox-content">
                        <h2>New Factory Staff</h2>
                        <div class="form-group row">
                            <div class="col-sm-10">
                                <input v-model="newFactoryStaff.firstName" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-10">
                                <input v-model="newFactoryStaff.lastName" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-10">
                                <input v-model="newFactoryStaff.description" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="btn-group">
                            <button class="btn-white btn btn-xs" @@click="addFactoryStaff">Add Factory Staff</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


@section scripts{

    <script src="~/js/admin/factoriesStaff.js"></script>
}
