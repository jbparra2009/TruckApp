@page
@model TruckApp.UI.Pages.Admin.Pages.BrokerModel
@{
}

<div id="app" class="wrapper wrapper-content animated fadeInRight ecommerce">
    <div class="row" v-if="editing">
        <div class="col-lg-12">
            <div class="tabs-container">
                <ul class="nav nav-tabs">
                    <li><a class="nav-link active" data-toggle="tab" href="#tab-1">Broker info</a></li>
                </ul>
                <div class="tab-content">
                    <div id="tab-1" class="tab-pane active">
                        <div class="panel-body">
                            <fieldset>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Name:</label>
                                    <div class="col-sm-10">
                                        <input v-model="brokerModel.brokerName" type="text" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Description:</label>
                                    <div class="col-sm-10">
                                        <input v-model="brokerModel.description" type="text" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Status:</label>
                                    <div class="col-sm-10">
                                        <select v-model="brokerModel.status" class="form-control">
                                            <option value="Active" selected>Active</option>
                                            <option value="Disabled">Disabled</option>
                                            <option value="StandBy">StandBy</option>
                                            <option value="Deleted">Deleted</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <button class="btn btn-success" @@click="createBroker" v-if="!brokerModel.id">Create Broker</button>
                                    <button class="btn btn-primary" @@click="updateBroker" v-else>Update Broker</button>
                                    <button class="btn btn-default" @@click="cancel">Cancel</button>
                                </div>
                            </fieldset>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row" v-if="!editing">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">
                    <button class="btn btn-default" @@click="newBroker">Add New Broker</button>
                    <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="15">
                        <thead>
                            <tr>
                                <th data-toggle="true">Broker Name</th>
                                <th data-hide="all">Description</th>
                                <th data-hide="phone">Created</th>
                                <th data-hide="phone,tablet">State</th>
                                <th data-hide="phone">Status</th>
                                <th class="text-right" data-sort-ignore="true">Action</th>

                            </tr>
                        </thead>
                        <tbody>
                            <tr v-for="(broker, index) in brokers">
                                <td>
                                    {{broker.brokerName}}
                                </td>
                                <td>
                                    {{broker.description}}
                                </td>
                                <td>
                                    {{broker.created}}
                                </td>
                                <td>
                                    {{broker.state}}
                                </td>
                                <td>
                                    <span class="label label-primary">{{broker.status}}</span>
                                </td>
                                <td class="text-right">
                                    <div class="btn-group">
                                        <button class="btn-white btn btn-xs" @@click="editBroker(broker.id, index)">Edit</button>
                                        <button class="btn-white btn btn-xs" @@click="deleteBroker(broker.id, index)">Delete</button>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="6">
                                    <ul class="pagination float-right"></ul>
                                </td>
                            </tr>
                        </tfoot>
                    </table>

                </div>
            </div>
        </div>
    </div>


</div>



