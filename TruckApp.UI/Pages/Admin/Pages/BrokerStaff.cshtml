@page
@model TruckApp.UI.Pages.Admin.Pages.BrokerStaffModel
@{
}

    <div id="app" class="wrapper wrapper-content animated fadeInRight ecommerce">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox">
                    <div class="ibox-content">
                        <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="15">
                            <thead>
                                <tr>
                                    <th data-toggle="true">Broker Name</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr v-for="broker in brokers" >
                                    <td>
                                        {{broker.brokerName}}
                                    </td>
                                    <td class="text-right">
                                        <div class="btn-group">
                                            <button class="btn-white btn btn-xs" @@click="selectBroker(broker)">Select</button>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="ibox" v-if="selectedBroker" >
                    <div class="ibox-content">
                        <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="15">
                            <thead>
                            <thead>
                                <tr>
                                    <th data-toggle="true">First Name</th>
                                    <th data-hide="all">Last Name</th>
                                    <th data-hide="phone">Description</th>
                                    <th class="text-right" data-sort-ignore="true">Action</th>

                                </tr>
                            </thead>
                            <tbody>
                                <tr v-for="(brokerStaff, index) in selectedBroker.brokerStaff">
                                    <td>
                                        <div class="form-group row">
                                            <div class="col-sm-10">
                                                <input v-model="brokerStaff.firstName" type="text" class="form-control">
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="form-group row">
                                            <div class="col-sm-10">
                                                <input v-model="brokerStaff.lastName" type="text" class="form-control">
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="form-group row">
                                            <div class="col-sm-10">
                                                <input v-model="brokerStaff.description" type="text" class="form-control">
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-right">
                                        <div class="btn-group">
                                            <button class="btn-white btn btn-xs" @@click="updateBrokerStaff">Update</button>
                                            <button class="btn-white btn btn-xs" @@click="deleteBrokerStaff(brokerStaff.id, index)">Delete</button>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="ibox">
                    <div class="ibox-content">
                        <h2>New Broker Staff</h2>
                        <div class="form-group row">
                            <div class="col-sm-10">
                                <input v-model="newBrokerStaff.firstName" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-10">
                                <input v-model="newBrokerStaff.lastName" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-10">
                                <input v-model="newBrokerStaff.description" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="btn-group">
                            <button class="btn-white btn btn-xs" @@click="addBrokerStaff">Add Broker Staff</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>

@section scripts{

    <script src="~/js/admin/brokersStaff.js"></script>
}