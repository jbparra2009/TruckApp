@page
@model TruckApp.UI.Pages.Admin.Pages.FactoryModel
@{
}

<div id="app" class="wrapper wrapper-content animated fadeInRight ecommerce">
    <div class="row" v-if="editing">
        <div class="col-lg-12">
            <div class="tabs-container">
                <ul class="nav nav-tabs">
                    <li><a class="nav-link active" data-toggle="tab" href="#tab-1">Factory info</a></li>
                </ul>
                <div class="tab-content">
                    <div id="tab-1" class="tab-pane active">
                        <div class="panel-body">
                            <fieldset>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Name:</label>
                                    <div class="col-sm-10">
                                        <input v-model="factoryModel.name" type="text" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Rate:</label>
                                    <div class="col-sm-10">
                                        <input v-model.number="factoryModel.rate" type="text" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Status:</label>
                                    <div class="col-sm-10">
                                        <select v-model="factoryModel.status" class="form-control">
                                            <option value="Active" selected>Active</option>
                                            <option value="Disabled">Disabled</option>
                                            <option value="StandBy">StandBy</option>
                                            <option value="Deleted">Deleted</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-4 col-sm-offset-2">
                                        <button class="btn btn-primary btn-primary" @@click="createFactory" v-if="!factoryModel.id">Create Factory</button>
                                        <button class="btn btn-primary btn-primary" @@click="updateFactory" v-else>Update Factory</button>
                                        <button class="btn btn-white btn-default" type="submit" @@click="cancel">Cancel</button>
                                    </div>
                                </div>
                            </fieldset>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row" v-if="!editing">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">
                    <button class="btn btn-default" @@click="newFactory">Add New Factory</button>
                    <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="15">
                        <thead>
                            <tr>
                                <th data-toggle="true">Factory Name</th>
                                <th data-hide="all">Description</th>
                                <th data-hide="phone,tablet">State</th>
                                <th data-hide="phone">Status</th>
                                <th class="text-right" data-sort-ignore="true">Action</th>

                            </tr>
                        </thead>
                        <tbody>
                            <tr v-for="(factory, index) in factories">
                                <td>
                                    {{factory.name}}
                                </td>
                                <td>
                                    {{factory.description}}
                                </td>
                                <td>
                                    {{factory.state}}
                                </td>
                                <td>
                                    <span class="label label-primary">{{factory.status}}</span>
                                </td>
                                <td class="text-right">
                                    <div class="btn-group">
                                        <button class="btn-white btn btn-xs" @@click="editFactory(factory.id, index)">Edit</button>
                                        <button class="btn-white btn btn-xs" @@click="deleteFactory(factory.id, index)">Delete</button>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="6">
                                    <ul class="pagination float-right"></ul>
                                </td>
                            </tr>
                        </tfoot>
                    </table>

                </div>
            </div>
        </div>
    </div>


</div>

