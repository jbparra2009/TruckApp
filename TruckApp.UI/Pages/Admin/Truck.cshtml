@page
@model TruckApp.UI.Pages.Admin.TruckModel
@{
}

    <div id="app" class="wrapper wrapper-content animated fadeInRight ecommerce">
        <div class="row" v-if="editing">
            <div class="col-lg-12">
                <div class="tabs-container">
                    <ul class="nav nav-tabs">
                        <li><a class="nav-link active" data-toggle="tab" href="#tab-1">Trailer info</a></li>
                        <li><a class="nav-link" data-toggle="tab" href="#tab-2"> Data</a></li>
                    </ul>
                    <div class="tab-content">
                        <div id="tab-1" class="tab-pane active">
                            <div class="panel-body">
                                <fieldset>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">VIN:</label>
                                        <div class="col-sm-10">
                                            <input v-model="truckModel.vin" type="text" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Year:</label>
                                        <div class="col-sm-10">
                                            <input v-model="truckModel.year" type="text" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Make:</label>
                                        <div class="col-sm-10">
                                            <input v-model="truckModel.make" type="text" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">type:</label>
                                        <div class="col-sm-10">
                                            <input v-model="truckModel.type" type="text" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Class:</label>
                                        <div class="col-sm-10">
                                            <input v-model="truckModel.class" type="text" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Body Type:</label>
                                        <div class="col-sm-10">
                                            <input v-model="truckModel.bodyType" type="text" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Lenght:</label>
                                        <div class="col-sm-10">
                                            <input v-model="truckModel.lenght" type="text" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Description:</label>
                                        <div class="col-sm-10">
                                            <input v-model="truckModel.description" type="text" class="form-control">
                                        </div>
                                    </div>
                                </fieldset>
                            </div>
                        </div>
                        <div id="tab-2" class="tab-pane">
                            <div class="panel-body">
                                <fieldset>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Number:</label>
                                        <div class="col-sm-10">
                                            <input v-model="truckModel.truckNumber" type="text" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Plate:</label>
                                        <div class="col-sm-10">
                                            <input v-model="truckModel.truckPlate" type="text" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Registrant Name:</label>
                                        <div class="col-sm-10">
                                            <input v-model="truckModel.registrantName" type="text" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Title State:</label>
                                        <div class="col-sm-10">
                                            <input v-model="truckModel.titleState" type="text" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Owner Lessor Name:</label>
                                        <div class="col-sm-10">
                                            <input v-model="truckModel.ownerLessorName" type="text" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">expiresDate:</label>
                                        <div class="col-sm-10">
                                            <input v-model="truckModel.expiresDate" type="text" class="form-control">
                                            <small class="form-text">YYYY-MM-dd</small>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">efectiveDate:</label>
                                        <div class="col-sm-10">
                                            <input v-model="truckModel.efectiveDate" type="text" class="form-control">
                                            <small class="form-text">YYYY-MM-dd</small>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">issueDate:</label>
                                        <div class="col-sm-10">
                                            <input v-model="truckModel.issueDate" type="text" class="form-control">
                                            <small class="form-text">YYYY-MM-dd</small>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Purchase Price:</label>
                                        <div class="col-sm-10">
                                            <input v-model.number="truckModel.purchasePrice" type="text" class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Purchase Date:</label>
                                        <div class="col-sm-10">
                                            <input v-model="truckModel.purchaseDate" type="text" class="form-control">
                                            <small class="form-text">YYYY-MM-dd</small>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Status:</label>
                                        <div class="col-sm-10">
                                            <select v-model="truckModel.status" class="form-control">
                                                <option value="Active" selected>Active</option>
                                                <option value="Disabled">Disabled</option>
                                                <option value="StandBy">StandBy</option>
                                                <option value="Deleted">Deleted</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-sm-4 col-sm-offset-2">
                                            <button class="btn btn-primary btn-primary" @@click="createTruck" v-if="!truckModel.id">Create Truck</button>
                                            <button class="btn btn-primary btn-primary" @@click="updateTruck" v-else>Update Truck</button>
                                            <button class="btn btn-white btn-default" type="submit" @@click="cancel">Cancel</button>
                                        </div>
                                    </div>
                                </fieldset>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row" v-if="!editing">
            <div class="col-lg-12">
                <div class="ibox">
                    <div class="ibox-content">
                        <button class="btn btn-default" @@click="newTruck">Add New Truck</button>
                        <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="15">
                            <thead>
                                <tr>
                                    <th data-toggle="true">Truck Number</th>
                                    <th data-hide="phone">Plate</th>
                                    <th data-hide="phone">Description</th>
                                    <th data-hide="phone">Year</th>
                                    <th data-hide="phone">Status</th>
                                    <th class="text-right" data-sort-ignore="true">Action</th>

                                </tr>
                            </thead>
                            <tbody>
                                <tr v-for="(truck, index) in trucks">
                                    <td>
                                        {{truck.truckNumber}}
                                    </td>
                                    <td>
                                        {{truck.truckPlate}}
                                    </td>
                                    <td>
                                        {{truck.description}}
                                    </td>
                                    <td>
                                        {{truck.year}}
                                    </td>
                                    <td>
                                        <span class="label label-primary">{{truck.status}}</span>
                                    </td>
                                    <td class="text-right">
                                        <div class="btn-group">
                                            <button class="btn-white btn btn-xs" @@click="editTruck(truck.id, index)">Edit</button>
                                            <button class="btn-white btn btn-xs" @@click="deleteTruck(truck.id, index)">Delete</button>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="6">
                                        <ul class="pagination float-right"></ul>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>

