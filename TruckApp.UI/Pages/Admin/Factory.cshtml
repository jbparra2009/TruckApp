@page
@model TruckApp.UI.Pages.Admin.FactoryModel
@{
}

    <div id="app">
        <div>
            <p v-for="(factory, index) in factories">
                {{factory.name}} - {{factory.email}} - {{factory.description}}
                <a @@click="editFactory(factory.id, index)">Edit</a>
                <a @@click="deleteFactory(factory.id, index)">Remove</a>
            </p>
        </div>

        <div>
            <input v-model="factoryModel.name" />
            <input v-model="factoryModel.email" />
            <input v-model="factoryModel.phone1" />
            <input v-model="factoryModel.address1" />
            <input v-model="factoryModel.city" />
            <input v-model="factoryModel.state" />
            <input v-model="factoryModel.zipCode" />
            <input v-model="factoryModel.description" />
            <input v-model.number="factoryModel.rate" />
            <input v-model="factoryModel.status" />

            <button @@click="createFactory" v-if="!factoryModel.id">Create Factory</button>
            <button @@click="updateFactory" v-else>Update Factory</button>
        </div>
    </div>


@section scripts{
    @*<script src="https://cdn.jsdelivr.net/npm/vue@2.6.10/dist/vue.js"></script>*@
    @*<script src="https://unpkg.com/axios/dist/axios.min.js"></script>*@

    <script src="~/js/admin/factories.js"></script>
}