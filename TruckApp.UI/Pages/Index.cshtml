@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="wrapper wrapper-content animated fadeInRight ecommerce">
    <div class="row">
        <div class="col-lg-6">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Brokers Table </h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibpox-content">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Phone</th>
                                <th>Email</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var p in Model.Brokers)
                                {
                                    <tr>
                                        <td>
                                            @p.BrokerName
                                        </td>
                                        <td>
                                            @p.Phone1
                                        </td>
                                        <td>
                                            @p.Email
                                        </td>
                                        <td class="text-right">
                                            <div class="btn-group">
                                                <a asp-page="Broker" asp-route-brokerName="@p.BrokerName.Replace(" ", "-")">
                                                    Detail
                                                </a>
                                            </div>
                                        </td>

                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
